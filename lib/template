#!/bin/bash
git init -q
git remote add origin https://github.com/Legends-Mkt/docker_testnegative
git fetch origin -q
git checkout origin/master -- compose
mv compose/* ./
mv compose/.gitignore ./
rm -rf compose .git
git init
mkdir ./magento
cd ./magento 
git clone -b pre-master-dev3 git@github.com:Legends-Mkt/testnegative_magento.git .
cd ./app
mkdir ./etc
cd ./etc
cp /Users/max/Dropbox/DEV/LEGENDS/docker_testnegative/compose/env.php env.php
cp /Users/max/Dropbox/DEV/LEGENDS/docker_testnegative/compose/config.php config.php
